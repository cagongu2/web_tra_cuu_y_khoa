{
  "dashboard": {
    "title": "Medical Platform Monitoring",
    "tags": ["medical", "spring-boot"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Request Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(http_server_requests_seconds_count[5m]))",
            "legendFormat": "Total Requests/sec"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Error Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(http_server_requests_seconds_count{status=~\"5..\"}[5m])) * 100 / sum(rate(http_server_requests_seconds_count[5m]))",
            "legendFormat": "Error Rate %"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "Response Time (p95)",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(http_server_requests_seconds_bucket[5m])) by (le))",
            "legendFormat": "95th percentile"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 4,
        "title": "JVM Memory Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(jvm_memory_used_bytes{area=\"heap\"})",
            "legendFormat": "Heap Used"
          },
          {
            "expr": "sum(jvm_memory_max_bytes{area=\"heap\"})",
            "legendFormat": "Heap Max"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      },
      {
        "id": 5,
        "title": "Database Connection Pool",
        "type": "graph",
        "targets": [
          {
            "expr": "hikari_connections_active",
            "legendFormat": "Active Connections"
          },
          {
            "expr": "hikari_connections_max",
            "legendFormat": "Max Connections"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16}
      },
      {
        "id": 6,
        "title": "Cache Hit Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(cache_hits_total[5m])) * 100 / (sum(rate(cache_hits_total[5m])) + sum(rate(cache_misses_total[5m])))",
            "legendFormat": "Cache Hit Rate %"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16}
      },
      {
        "id": 7,
        "title": "Posts Created",
        "type": "stat",
        "targets": [
          {
            "expr": "posts_created_total",
            "legendFormat": "Total Posts"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 24}
      },
      {
        "id": 8,
        "title": "Active Users",
        "type": "stat",
        "targets": [
          {
            "expr": "users_registered_total",
            "legendFormat": "Total Users"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 24}
      },
      {
        "id": 9,
        "title": "Login Success Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "auth_login_success_total * 100 / auth_login_attempts_total",
            "legendFormat": "Success Rate %"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 24}
      },
      {
        "id": 10,
        "title": "Files Uploaded",
        "type": "stat",
        "targets": [
          {
            "expr": "files_uploaded_total",
            "legendFormat": "Total Files"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 24}
      }
    ],
    "refresh": "30s",
    "time": {
      "from": "now-6h",
      "to": "now"
    }
  }
}